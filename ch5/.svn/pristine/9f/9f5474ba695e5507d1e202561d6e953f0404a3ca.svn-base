/* 清除浮动 */

.clearfix::after {
    content: '';
    display: inline-block;
    height: 0;
    clear: both;
}


/* 左浮动 */

.fl {
    float: left;
}


/* 右浮动 */

.fr {
    float: right;
}


/* 版心 */

.container {
    width: 1200px;
    margin: 0 auto;
}


/*1.====================== 顶部 ====================== */


/*顶部外层容器*/

.topbar {
    height: 28px;
    background-color: rgb(0, 0, 0);
}


/*顶部里层容器*/

.topbar .container {
    height: 28px;
    background-color: rgb(0, 0, 0);
}


/*里面的P标签*/

.topbar .container p {
    height: 28px;
    line-height: 28px;
    color: rgb(255, 255, 255);
}


/*第一个p标签*/

.topbar .container p:first-child {
    text-indent: 210px;
}


/*第一个p标签下面的a标签*/

.topbar .container p:first-child a {
    color: seashell;
    text-decoration: none;
}


/*第二个p标签*/

.topbar .container p:first-child(2) {
    margin-right: 10px;
}


/*第二个p标签 下面的标题 和 注册*/

.topbar .container p:nth-child(2) a:not(.login) {
    color: #fd7d27;
}


/*第二个p标签下面的登录*/

.topbar .container p:nth-child(2) .login {
    color: snow;
}


/*2.====================== 导航 ====================== */

.nav {
    height: 84px;
    background-color: #cccccc;
}


/*搜索购物车订单大容器*/

.nav .search-shopcart-order {
    margin-top: 5px;
    height: 35px;
}


/*搜索框*/

.nav .search-shopcart-order .search-input {
    width: 440px;
    height: 45px;
    background-color: 口#ff6700;
    margin-right: 38px;
    position: relative;
}


/*搜索框中的图标span*/

.nav .search-shopcart-order .search-input span {
    display: inline;
    width: 50px;
    height: 30px;
    position: absolute;
    right: 0;
    top: 0;
    margin-top: 8px;
    background-image: url('../images/img/bgicon.png');
}


/*搜索框*/

.nav .search-shopcart-order .search-input .search {
    width: 390px;
    height: 26px;
    border: 2px solid #ff6700;
    text-indent: 10px;
    color: #333;
    outline: none;
    margin-top: 8px;
}


/*购物车和订单*/

.nav .search-shopcart-order .shopcart-order {
    width: 200px;
    height: 35px;
    font-size: 0em;
}


/*购物车订单按钮*/

.nav .search-shopcart-order .shopcart-order button {
    width: 100px;
    height: 35px;
    background-color: #ebebeb;
    border: 1px solid #ffffff;
    font-size: 13px;
    color: #333;
}


/*购物车图标*/

.nav .search-shopcart-order .shopcart-order button:nth-child(1) {
    background-color: #ff6700;
    color: #fff;
    background-image: url(../images/img/bgicon.png);
    background-repeat: no-repeat;
    background-position: -4px -44px;
    margin-top: 8px;
}


/*分类导航*/

.nav .category-menu {
    margin-top: 15px;
    height: 30px;
    background-color: red;
}

.nav .category-menu .left-logo {
    width: 200px;
    height: 30px;
    background-color: aquamarine;
}

.nav .category-menu .left-logo img {
    position: absolute;
    top: 4px;
    left: 161;
}

.nav .category-menu ul {
    width: 1000px;
    height: 33px;
    background-color: rgb(250, 250, 250);
}

.nav .category-menu ul li {
    float: left;
    height: 30px;
    line-height: 30px;
    width: 80px;
    color: #333;
    font-size: 14px;
    text-align: center;
    font-weight: 700;
}


/*11.====================== 尾部 ====================== */

.footer {
    height: 470px;
}


/* 顶部logo */

.footer .logo-list {
    width: 100%;
    height: 90px;
    background-color: #f2f2f2;
}

.footer .logo-list .logo-wrap {
    width: 786px;
    height: 96px;
    margin: 0 auto;
}

.footer .logo-list .logo-wrap li {
    width: 132px;
    height: 50px;
    float: left;
    margin-top: 2px;
}


/* 伪元素marker控制 */

.footer .logo-list .logo-wrap li::marker {
    color: #f2f2f2;
}

.footer .logo-list .logo-wrap li:not(:first-child) {
    margin-left: 86px;
}

.footer .footer-text {
    height: 374px;
    position: relative;
    padding-top: 30px;
    box-sizing: border-box;
}

.footer .footer-text img {
    position: absolute;
    right: 98px;
    top: 62px;
}

.footer .footer-text ul {
    width: 760px;
    height: 132px;
    margin: 0 auto;
}

.footer .footer-text ul li {
    float: left;
    width: 150px;
    height: 132px;
    text-align: center;
    color: #000;
    font-size: 24px;
}

.footer .footer-text ul li dl {
    line-height: 26px;
    color: #646464;
    font-size: 18px;
}

.footer .footer-text p {
    text-align: center;
    margin-top: 45px;
    font-size: 15px;
    color: #646464;
}